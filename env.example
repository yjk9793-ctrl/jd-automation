# AI Agent Transformation Platform - Environment Variables

# OpenAI API Key (for GPT-4 analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude analysis)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API Key (for AI analysis)
GEMINI_API_KEY=gen-lang-client-0285771016

# Email Configuration (for sending analysis results)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Database Configuration (optional - for future use)
DATABASE_URL=postgresql://username:password@localhost:5432/aiagent

# Next.js Configuration
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Analytics (optional)
GOOGLE_ANALYTICS_ID=your_ga_id

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# External Services
SENDGRID_API_KEY=your_sendgrid_api_key
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Development
NODE_ENV=development
DEBUG=true
